<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marsjiang.statustextview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.marsjiang.statustextview.view.MyScanStateTextView
            android:id="@+id/tv_mystate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:scanedText="已验收"
            app:tv_scaned_color="@color/colorPrimary"
            app:tv_unscaned_color="@color/colorRed"
            app:unScanedText="未验收"/>
    </LinearLayout>

</LinearLayout>
